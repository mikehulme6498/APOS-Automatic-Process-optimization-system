@model IEnumerable<BatchDataAccessLibrary.Models.MaterialDetails>

@{
    ViewData["Title"] = "Index";
}

<br />
<ul class="breadcrumb">
    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li><a asp-controller="Settings" asp-action="Index">Settings</a></li>
    <li>List Of New Materials</li>
</ul>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="info-card">
            <div class="info-card-heading">Materials which need details entering</div>
            <div class="info-card-content-alignLeft">

                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ShortName)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShortName)
                                </td>

                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.MaterialDetailsId">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>