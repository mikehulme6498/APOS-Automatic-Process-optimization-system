@model BatchDataAccessLibrary.Models.PcsScoring

@{
    ViewData["Title"] = "Edit PCS Scoring";
}

<br />
<ul class="breadcrumb">
    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li><a asp-controller="Settings" asp-action="Index">Settings</a></li>
    <li>Edit PCS Scoring Targets</li>
</ul>


<div class="row">
    <div class="col-md-4 offset-4">
        <div class="info-card">
            <div class="info-card-heading">Edit PCS Scoring targets</div>
            <div class="info-card-content-alignLeft">
                <form asp-action="EditPcsScoring">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="PcsScoringId" />
                    <div class="form-group">
                        <label asp-for="Score2Target" class="control-label"></label>
                        <input asp-for="Score2Target" class="form-control" />
                        <span asp-validation-for="Score2Target" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Score1Lower" class="control-label"></label>
                        <input asp-for="Score1Lower" class="form-control" />
                        <span asp-validation-for="Score1Lower" class="text-danger"></span>
                    </div>
                    <div class="form-group footer-right">
                        <a asp-action="Index" class="btn btn-info">Cancel</a>
                        <input type="submit" value="Save" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
