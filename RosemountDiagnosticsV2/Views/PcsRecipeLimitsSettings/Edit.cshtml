@model BatchDataAccessLibrary.Models.RecipeLimits

@{
    ViewData["Title"] = "Edit Recipe Limit";
}

<br />
<ul class="breadcrumb">
    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li><a asp-controller="Settings" asp-action="Index">Settings</a></li>
    <li><a asp-controller="PcsRecipeLimitsSettings" asp-action="Index">Add / Remove Pcs Recipe Limits</a></li>
    <li>Edit limit</li>
</ul>
<hr />
<div class="row">
    <div class="col-md-4 offset-4">
        <div class="info-card">
            <div class="info-card-heading">Edit limits for @Model.LimitTypes of @Model.RecipeType recipes</div>
            <div class="info-card-content-alignLeft">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="RecipeLimitsId" />
                    <div class="form-group">
                        <label asp-for="RecipeType" class="control-label"></label>
                        <select asp-for="RecipeType" asp-items="Html.GetEnumSelectList<BatchDataAccessLibrary.Enums.RecipeTypes>()" class="form-control"></select>
                        <span asp-validation-for="RecipeType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LimitTypes" class="control-label"></label>
                        <select asp-for="LimitTypes" asp-items="Html.GetEnumSelectList<BatchDataAccessLibrary.Enums.LimitType>() " class="form-control" disabled></select>
                        <span asp-validation-for="LimitTypes" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Min" class="control-label"></label>
                        <input asp-for="Min" class="form-control" />
                        <span asp-validation-for="Min" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Max" class="control-label"></label>
                        <input asp-for="Max" class="form-control" />
                        <span asp-validation-for="Max" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GuageMax" class="control-label"></label>
                        <input asp-for="GuageMax" class="form-control" />
                        <span asp-validation-for="GuageMax" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Target" class="control-label"></label>
                        <input asp-for="Target" class="form-control" />
                        <span asp-validation-for="Target" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Tolerance" class="control-label"></label>
                        <input asp-for="Tolerance" class="form-control" />
                        <span asp-validation-for="Tolerance" class="text-danger"></span>
                    </div>
                    <div class="form-group footer-right">
                        <a asp-action="Index" class="btn btn-info">Cancel</a>
                        <input type="submit" value="Save" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>       
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
