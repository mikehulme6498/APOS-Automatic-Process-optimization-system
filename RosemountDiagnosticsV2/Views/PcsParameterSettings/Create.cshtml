@model BatchDataAccessLibrary.Models.PcsWeightParameters

@{
    ViewData["Title"] = "Add New PCS Parameter";
}

<br />
<ul class="breadcrumb">
    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li><a asp-controller="Settings" asp-action="Index">Settings</a></li>
    <li><a asp-controller="PcsParameterSettings" asp-action="Index">Add / Remove Pcs Parameters</a></li>
    <li>Add new Parameter</li>
</ul>

<div class="row">
    <div class="col-md-4 offset-4">
        <div class="info-card">
            <div class="info-card-heading">Add new parameter to PCS compliance results</div>
            <div class="info-card-content-alignLeft">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="RecipeType" class="control-label"></label>
                        <select asp-for="RecipeType" asp-items="Html.GetEnumSelectList<BatchDataAccessLibrary.Enums.RecipeTypes>()" class="form-control"></select>
                        <span asp-validation-for="RecipeType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Parameter" class="control-label"></label>
                        <select asp-for="Parameter" asp-items="@ViewBag.Materials" class="form-control"></select>
                        <span asp-validation-for="Parameter" class="text-danger"></span>
                    </div>
                    <div class="form-group footer-right">
                        <a asp-action="Index" class="btn btn-danger">Cancel</a>
                        <input type="submit" value="Add" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
