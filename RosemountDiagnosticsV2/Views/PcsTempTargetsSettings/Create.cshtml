@model BatchDataAccessLibrary.Models.PcsTempTargets

@{
    ViewData["Title"] = "PCS Temperature Targets";
}

<br />
<ul class="breadcrumb">
    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li><a asp-controller="Settings" asp-action="Index">Settings</a></li>
    <li><a asp-controller="PcsTempTargetsSettings" asp-action="Index">View Temp Targets</a></li>
    <li>Create new temp target</li>
</ul>


<div class="row">
    <div class="col-md-4 offset-4">
        <div class="info-card">
            <div class="info-card-heading">Create new temperature target</div>
                <div class="info-card-content-alignLeft">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="RecipeType" class="control-label"></label>
                            <select asp-for="RecipeType" asp-items="Html.GetEnumSelectList<BatchDataAccessLibrary.Enums.RecipeTypes>()" class="form-control"></select>
                            <span asp-validation-for="RecipeType" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Recipe" class="control-label"></label>
                            <input asp-for="Recipe" class="form-control" />
                            <span asp-validation-for="Recipe" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Target" class="control-label"></label>
                            <input asp-for="Target" class="form-control" />
                            <span asp-validation-for="Target" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UpperLimit" class="control-label"></label>
                            <input asp-for="UpperLimit" class="form-control" />
                            <span asp-validation-for="UpperLimit" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LowerLimit" class="control-label"></label>
                            <input asp-for="LowerLimit" class="form-control" />
                            <span asp-validation-for="LowerLimit" class="text-danger"></span>
                        </div>
                        <div class="form-group footer-right">
                            <a asp-action="Index" class="btn btn-info">Cancel</a>
                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>
                    </form>
                </div>       
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
